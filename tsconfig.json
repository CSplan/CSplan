{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "typeRoots": ["types", "node_modules/@types"],
    "paths": {
      "$lib/*": ["./src/lib/*"]
    }
  }
}
