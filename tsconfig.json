{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "typeRoots": ["types", "node_modules/@types"],
    "baseUrl": "src",
    "paths": {
      "$lib": ["lib"],
      "$lib/*": ["lib/*"],
      "$stores/*": ["stores/*"],
      "$components/*": ["components/*"],
      "$db": ["db"],
      "$db/*": ["db/*"],
      "$hooks": ["hooks"]
    }
  }
}
